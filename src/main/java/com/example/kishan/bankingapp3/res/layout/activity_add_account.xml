<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.taylor.ferin.frontend.activities.account.AddAccount">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Account Number"
        android:id="@+id/lblAccountNumber"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAccountNumber"
        android:layout_alignBottom="@+id/lblAccountNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/lblAccountNumber"
        android:layout_toEndOf="@+id/lblAccountNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance"
        android:id="@+id/lblBalance"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/lblAccountNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtBalance"
        android:layout_alignBottom="@+id/lblBalance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/lblAccountNumber"
        android:layout_toEndOf="@+id/lblAccountNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pin"
        android:id="@+id/lblpin"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/lblBalance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtPin"
        android:layout_alignBottom="@+id/lblpin"
        android:layout_alignRight="@+id/txtBalance"
        android:layout_alignEnd="@+id/txtBalance"
        android:layout_alignLeft="@+id/txtBalance"
        android:layout_alignStart="@+id/txtBalance" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/btnSave"
        android:layout_below="@+id/lblpin"
        android:layout_alignRight="@+id/txtPin"
        android:layout_alignEnd="@+id/txtPin"
        android:layout_marginTop="59dp"
        android:onClick="saveAccount"/>

</RelativeLayout>
