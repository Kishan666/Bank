<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.taylor.ferin.frontend.activities.client.AddClientActivity"
    android:nestedScrollingEnabled="true">

    <TextView
        android:id="@+id/lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:elevation="5dp"
        android:focusableInTouchMode="false"
        android:textSize="10pt"
        android:layout_alignBottom="@+id/txtName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:minWidth="90pt"
        android:minHeight="15pt"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:id="@+id/lblSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname"
        android:elevation="5dp"
        android:focusableInTouchMode="false"
        android:textSize="10pt"
        android:layout_below="@+id/txtName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSurname"
        android:minWidth="90pt"
        android:minHeight="15pt"
        android:background="#ffffff"
        android:layout_above="@+id/txtEmail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="register"
        android:id="@+id/btnRegister"
        android:minWidth="90pt"
        android:minHeight="15pt"
        android:onClick="save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:minWidth="90pt"
        android:minHeight="15pt"
        android:background="#ffffff"
        android:inputType="textWebEmailAddress"
        android:layout_below="@+id/lblSurname"
        android:layout_alignLeft="@+id/txtSurname"
        android:layout_alignStart="@+id/txtSurname"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:elevation="5dp"
        android:focusableInTouchMode="false"
        android:textSize="10pt"
        android:layout_alignTop="@+id/txtEmail"
        android:layout_alignRight="@+id/lblName"
        android:layout_alignEnd="@+id/lblName" />

    <TextView
        android:id="@+id/lblIDNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Number"
        android:elevation="5dp"
        android:focusableInTouchMode="false"
        android:textSize="10pt"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/txtEmail"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtIDNumber"
        android:minWidth="90pt"
        android:minHeight="15pt"
        android:background="#ffffff"
        android:inputType="textWebEmailAddress"
        android:layout_alignBaseline="@+id/lblIDNumber"
        android:layout_alignBottom="@+id/lblIDNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/lblPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:elevation="5dp"
        android:focusableInTouchMode="false"
        android:textSize="10pt"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/txtIDNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_alignBottom="@+id/lblPassword"
        android:layout_alignLeft="@+id/txtIDNumber"
        android:layout_alignStart="@+id/txtIDNumber" />

</RelativeLayout>
